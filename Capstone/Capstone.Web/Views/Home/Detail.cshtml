@model ParkVM
@{
    ViewData["Title"] = "Detail";
}

<h2>Detail</h2>

<p>@Model.Park.ParkName</p>
<div id="parkPicDiv">
    <img class="parkPic" src="~/images/@(Model.Park.ParkCode).jpg" />
</div>
<span>@Model.Park.State</span> is a wonderful park, covering 
<span>@Model.Park.Acreage</span> majestic acres. It stands at an elevation of 
<span>@Model.Park.Elevation</span>, or 
<span>@Model.Park.ElevationFeet</span> feet relative to sea level.
<p>@Model.Park.MilesOfTrail</p> 
<p>@Model.Park.NumberOfCampsites</p>
<p>@Model.Park.Climate</p>
<p>@Model.Park.YearFounded</p>
<p>@Model.Park.AnnualVisitorCount</p>
<p>@Model.Park.InspirationalQuote</p>
<p>@Model.Park.InspirationalQuoteSource</p>
<p>@Model.Park.ParkDescription</p>
<p>@Model.Park.EntryFee</p>
<p>@Model.Park.NumberOfAnimalSpecies</p>
<form asp-route-parkcode="@Model.Park.ParkCode" asp-route-unitpref="F">
    <input type="submit" value="Fahrenheit" />
</form>
<form asp-route-parkcode="@Model.Park.ParkCode" asp-route-unitpref="C">
    <input type="submit" value="Celcius" />
</form>
<div id="forecast">
    <p>Today:</p>
    <img class="today_forecast"src="~/images/@(Model.Weather.ElementAt(0).Forecast).png" />
    <p>@Model.Weather.ElementAt(0).Forecast</p>
    <p> High: @((int)Model.Weather.ElementAt(0).GetHigh(Model.UnitPref)) @Model.UnitPref</p>
    <p> Low: @((int)Model.Weather.ElementAt(0).GetLow(Model.UnitPref)) @Model.UnitPref</p>
    @if (Model.Weather.ElementAt(0).Forecast == "snow")
    {
        <p>WEATHER ALERT: Expecting snow! Be sure to bring snow shoes!</p>
    }
    @if (Model.Weather.ElementAt(0).Forecast == "rain")
    {
        <p>WEATHER ALERT: Rain's a'comin'! Best pack that rain gear and waterproof shoes!</p>
    }
    @if (Model.Weather.ElementAt(0).Forecast == "thunderstorms")
    {
        <p>WEATHER ALERT: God's angry, hurling bolts of electricity. Seek shelter and avoid hiking on exposed ridges.</p>
    }
    @if (Model.Weather.ElementAt(0).Forecast == "sunny")
    {
        <p>WEATHER ALERT: Skin cancer kills! Remember your hat and sunscreen!</p>
    }
    @if (Model.Weather.ElementAt(0).High > 75)
    {
        <p>WEATHER ALERT: It's a hot one! Be sure to bring an extra gallon of water.</p>
    }
    @if (((Model.Weather.ElementAt(0).High) - (Model.Weather.ElementAt(0).Low)) > 20)
    {
        <p>WEATHER ALERT: It's madness out there! Dress in breathable layers... or you'll regret it.</p>
    }
    @if (Model.Weather.ElementAt(0).Low < 20)
    {
        <p>WEATHER ALERT: It's chilly out there. Frigid temperatures can kill you and your family. Best to forget the park and watch a movie or something.</p>
    }
        @for (int i = 1; i < 5; i++)
         {
            <div class="weather_image">
                <img src="~/images/@(Model.Weather.ElementAt(i).Forecast).png" />
            </div>
            <p>@((int)Model.Weather.ElementAt(i).GetHigh(Model.UnitPref)) @Model.UnitPref</p>
            <p>@((int)Model.Weather.ElementAt(i).GetLow(Model.UnitPref)) @Model.UnitPref</p>
         }
</div>
